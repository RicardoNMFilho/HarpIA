<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/radioGroupModelType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">
        <RadioButton
            android:id="@+id/radioPyTorch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PyTorch"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/radioTFLite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TFLite"/>
        <RadioButton
            android:id="@+id/radioMindSpore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MindSpore"/>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroupDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/radioGroupModelType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <RadioButton
            android:id="@+id/radioCPU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPU"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/radioGPU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPU"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnLoadModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carregar modelo"
        app:layout_constraintTop_toBottomOf="@id/radioGroupDevice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>


    <TextView
        android:id="@+id/textViewModelName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Modelo: --"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnLoadModel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewDevice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dispositivo: --"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewModelName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewInferenceResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Resultado: --"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewDevice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewInferenceTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tempo de inferÃªncia: -- ms"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewInferenceResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewEnergy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Consumo estimado: -- mWh"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewInferenceTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnBenchmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benchmark ImageNetV2"
    app:layout_constraintTop_toBottomOf="@id/textViewInferenceTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>