<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="HarpIA Benchmark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#222"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RadioGroup
        android:id="@+id/radioGroupModelType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
        <RadioButton
            android:id="@+id/radioPyTorch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PyTorch"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/radioTFLite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TFLite"/>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroupDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/radioGroupModelType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <RadioButton
            android:id="@+id/radioCPU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPU"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/radioGPU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPU"/>
        <RadioButton
            android:id="@+id/radioNNAPI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NNAPI"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnLoadModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carregar modelo"
        android:backgroundTint="#1976D2"
        android:textColor="#FFF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroupDevice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnPickImageDir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecionar diretório de imagens"
        android:backgroundTint="#5E35B1"
        android:textColor="#FFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnLoadModel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnPickImages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecionar imagens (arquivos)"
        android:backgroundTint="#00897B"
        android:textColor="#FFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnPickImageDir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewResults"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
    app:layout_constraintTop_toBottomOf="@id/btnPickImages"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/textViewModelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modelo: --"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222"/>

            <TextView
                android:id="@+id/textViewDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dispositivo: --"
                android:textSize="16sp"
                android:textColor="#222"/>

            <TextView
                android:id="@+id/textViewInferenceResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resultado: --"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/textViewInferenceTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tempo de inferência: -- ms"
                android:textSize="16sp"
                android:textColor="#222"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/textViewEnergy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consumo estimado: -- mWh"
                android:textSize="16sp"
                android:textColor="#222"
                android:layout_marginTop="4dp"/>

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/textViewProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Progresso: --/-- (0%)"
                android:textSize="14sp"
                android:textColor="#555"
                android:layout_marginTop="6dp"
                android:visibility="gone"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btnBenchmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benchmark ImageNetV2"
        android:backgroundTint="#388E3C"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardViewResults"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnCancelBenchmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar benchmark"
        android:backgroundTint="#D32F2F"
        android:textColor="#FFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnBenchmark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>